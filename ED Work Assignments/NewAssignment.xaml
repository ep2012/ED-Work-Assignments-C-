<Window x:Class="ED_Work_Assignments.NewAssignment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="ED New Work Assignment" Height="300" Width="600" Background="#FF9B9999" FontFamily="Bookman Old Style" Left="0" Top="0" FontSize="14">
    <Grid>
        <Label Content="New Work Assignment" HorizontalAlignment="Center" Margin="165,5,165,0" VerticalAlignment="Top" FontFamily="Perpetua Titling MT" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="166" Margin="10,44,0,0" VerticalAlignment="Top" Width="567" Background="#FFC9C7C7">
        </Border>
        <ComboBox x:Name="cboSpecialTag" HorizontalAlignment="Left" Height="26" Margin="115,176,0,0" VerticalAlignment="Top" Width="454"/>
        <Label Content="Employee" HorizontalAlignment="Left" Height="26" Margin="20,52,0,0" VerticalAlignment="Top" Width="90" FontSize="14"/>
        <Label Content="Seat" HorizontalAlignment="Left" Height="26" Margin="20,83,0,0" VerticalAlignment="Top" Width="90" FontSize="14"/>
        <Label Content="Start" HorizontalAlignment="Left" Height="26" Margin="20,114,0,0" VerticalAlignment="Top" Width="90" FontSize="14"/>
        <Label Content="End" HorizontalAlignment="Left" Height="26" Margin="20,145,0,0" VerticalAlignment="Top" Width="90" FontSize="14"/>
        <Label Content="Special Tag" HorizontalAlignment="Left" Height="26" Margin="20,176,0,0" VerticalAlignment="Top" Width="90" FontSize="14"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top" Width="283" Height="40" Click="btnSave_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="293,215,0,0" VerticalAlignment="Top" Width="283" Height="40"/>
        <wpfTool:DateTimePicker x:Name="dtpEnd" HorizontalAlignment="Left" Height="26" Margin="115,145,0,0" VerticalAlignment="Top" Width="454"/>
        <wpfTool:DateTimePicker x:Name="dtpStart" HorizontalAlignment="Left" Height="26" Margin="115,114,0,0" VerticalAlignment="Top" Width="454"/>
        <ComboBox x:Name="cboSeat" HorizontalAlignment="Left" Height="26" Margin="115,83,0,0" VerticalAlignment="Top" Width="454"/>
        <ComboBox x:Name="cboEmployee" HorizontalAlignment="Left" Height="26" Margin="115,52,0,0" VerticalAlignment="Top" Width="454"/>

    </Grid>
</Window>
